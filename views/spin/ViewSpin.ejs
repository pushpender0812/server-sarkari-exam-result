<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Spin</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0; /* Light grey for background */
            color: #000000; /* Black for text */
            margin: 0;
            padding: 0;
        }

        .main {
            padding: 20px;
        }

        .pagetitle {
            margin-bottom: 20px;
        }

        .pagetitle h1 {
            color: #003366; /* Dark blue for title */
        }

        .breadcrumb {
            padding: 10px;
            background-color: #003366; /* Dark blue */
            color: #ffffff; /* White for breadcrumb links */
            border-radius: 5px;
        }

        .breadcrumb a {
            color: #ff69b4; /* Pink for links */
            text-decoration: none;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        .card {
            background-color: #2c2c2c; /* Dark brown for card background */
            color: #ffffff; /* White text inside cards */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card h5 {
            color: #ff69b4; /* Pink for card title */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table th, table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #dddddd;
        }

        table th {
            background-color: #003366; /* Dark blue for table headers */
            color: #ffffff; /* White for text */
        }

        table tr:hover {
            background-color: #444444; /* Hover effect with dark grey */
        }

        .btn {
            padding: 10px 20px;
            margin-top: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-edit {
            background-color: #ff69b4; /* Pink button */
            color: #ffffff;
        }

        .btn-delete {
            background-color: #8b0000; /* Dark red for delete */
            color: #ffffff;
        }

        .btn-edit:hover {
            background-color: #e5007a; /* Darker pink on hover */
        }

        .btn-delete:hover {
            background-color: #a50000; /* Darker red on hover */
        }
    </style>
</head>

<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>View Spins</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Spin</li>
                    <li class="breadcrumb-item active">View Spins</li>
                </ol>
            </nav>
        </div>
        <!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">List of Added Spins</h5>

                            <!-- Spins Table -->
                            <table>
                                <thead>
                                    <tr>
                                        <th>Job Title</th>
                                        <th>Spin Title</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Loop through spin data -->
                                    <% result.forEach(spin => { %>
                                    <tr>
                                        <td><%= spin.job_id.title %></td>
                                        <td><%= spin.spin_title %></td>
                                        <td>
                                            <button class="btn btn-edit">Edit</button>
                                            <button class="btn btn-delete">Delete</button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                            <!-- End of table -->

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- End #main -->
</body>

</html>

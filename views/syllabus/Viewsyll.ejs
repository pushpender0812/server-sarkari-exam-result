<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Syllabus</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom background and text colors */
        body {
            background-color: #f0f8ff; /* Light blue background */
        }

        .pagetitle h1 {
            color: #333333; /* Darker text for title */
        }

        .breadcrumb-item a {
            color: #0056b3; /* Blue color for breadcrumb links */
        }

        .card {
            background-color: #ffffff; /* White background for cards */
            color: #000000; /* Black text color */
        }

        .card-title {
            color: #007bff; /* Blue color for job titles */
        }

        .card-body p {
            color: #333333; /* Darker text for body content */
        }

        .btn-warning {
            color: #ffffff;
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-danger {
            color: #ffffff;
            background-color: #dc3545;
            border-color: #dc3545;
        }
    </style>
</head>

<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>View Syllabus</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Syllabus</li>
                    <li class="breadcrumb-item active">View Syllabus</li>
                </ol>
            </nav>
        </div>
        <!-- End Page Title -->

        <section class="section">
            <div class="row">
                <!-- Loop through result array to create cards -->
                <% result.forEach((syllabus, index) => { %>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title"><strong>Job Title:</strong> <%= syllabus.job_id.title %></h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Syllabus Date:</strong> <%= new Date(syllabus.syllabus_date).toDateString() %></p>
                            <p><strong>Syllabus Link:</strong> <%= syllabus.syllabus_link %></p>
                            <p><strong>Created At:</strong> <%= new Date(syllabus.createdAt).toLocaleString() %></p>
                            <p><strong>Updated At:</strong> <%= new Date(syllabus.updatedAt).toLocaleString() %></p>
                        </div>
                        <div class="card-footer">
                            <!-- Action buttons -->
                            <a href="/admin/user/syllabus/edit/<%= syllabus._id %>" class="btn btn-warning">Edit</a>
                            <a href="/admin/user/syllabus/delete/<%= syllabus._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this syllabus?');">Delete</a>
                        </div>
                    </div>
                </div>

                <% if ((index + 1) % 2 === 0) { %>
                    </div><div class="row">
                <% } %>
                <% }); %>
            </div>
        </section>
    </main>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>

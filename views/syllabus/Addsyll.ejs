<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Syllabus</title>
</head>

<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Add Syllabus</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Syllabus</li>
                    <li class="breadcrumb-item active">Add Syllabus</li>
                </ol>
            </nav>
        </div>
        <!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Add Syllabus</h5>

                            <form class="row g-3" action="/admin/user/syllabus/submit-syllabus" method="POST">
                                <!-- Select Job Title from result array -->
                                <div class="col-12">
                                    <label for="job_id" class="form-label">Select Job Title</label>
                                    <select class="form-control" id="job_id" name="job_id" required>
                                        <option value="" selected disabled>Select Job Title</option>
                                        <!-- Loop through result array to populate options -->
                                        <% result.forEach(job => { %>
                                            <option value="<%= job._id %>"><%= job.title %></option>
                                        <% }); %>
                                    </select>
                                </div>

                                <!-- Input for Syllabus Date -->
                                <div class="col-12">
                                    <label for="syllabus_date" class="form-label">Syllabus Date</label>
                                    <input type="date" class="form-control" id="syllabus_date" name="syllabus_date" required />
                                </div>

                                <!-- Input for Syllabus Link -->
                                <div class="col-12">
                                    <label for="syllabus_link" class="form-label">Syllabus Link</label>
                                    <input type="url" class="form-control" id="syllabus_link" name="syllabus_link" required />
                                </div>

                                <!-- Submit Button -->
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Submit Syllabus</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- End #main -->
</body>

</html>

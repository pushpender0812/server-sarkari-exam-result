<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Admit Cards</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>View Admit Cards</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Admit Card</li>
                    <li class="breadcrumb-item active">View Admit Cards</li>
                </ol>
            </nav>
        </div>
        <!-- End Page Title -->

        <section class="section">
            <div class="row">
                <!-- Loop through result array to create cards -->
                <% result.forEach((admitCard, index) => { %>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title"><strong>Job Title:</strong> <%= admitCard.job_id.title %></h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Admit Card Date:</strong> <%= new Date(admitCard.admit_card_date).toDateString() %></p>
                            <p><strong>Admit Card Link:</strong> <%= admitCard.admit_card_link %></p>
                            <p><strong>Created At:</strong> <%= new Date(admitCard.createdAt).toLocaleString() %></p>
                            <p><strong>Updated At:</strong> <%= new Date(admitCard.updatedAt).toLocaleString() %></p>
                        </div>
                        <div class="card-footer">
                            <!-- Action buttons -->
                            <a href="/admin/user/admitcard/edit/<%= admitCard._id %>" class="btn btn-warning">Edit</a>
                            <a href="/admin/user/admitcard/delete/<%= admitCard._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this admit card?');">Delete</a>
                        </div>
                    </div>
                </div>

                <% if ((index + 1) % 2 === 0) { %>
                    </div><div class="row">
                <% } %>
                <% }); %>
            </div>
        </section>
    </main>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>

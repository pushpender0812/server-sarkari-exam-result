<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Result</title>
    <style>
        /* Dark black background with shiny effect */
        body {
            background-color: #1c1c1c; /* Dark black background */
            color: #f0f0f0; /* Light gray font color for contrast */
        }

        .main {
            padding: 20px;
        }

        .pagetitle h1 {
            color: #ffffff; /* White color for the page title */
        }

        .breadcrumb-item a {
            color: #f0ad4e; /* Light orange color for breadcrumb links */
        }

        .breadcrumb-item.active {
            color: #ffffff; /* White for active breadcrumb item */
        }

        .card {
            background-color: #333333; /* Dark gray card background */
            color: #f0f0f0; /* Light gray font color */
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1); /* Soft shiny shadow */
        }

        .card-title {
            color: #f0ad4e; /* Light orange for the card title */
        }

        .form-label {
            color: #f0ad4e; /* Light orange for labels */
        }

        .form-control {
            background-color: #2b2b2b; /* Darker background for input fields */
            color: #ffffff; /* White text color for input fields */
            border: 1px solid #444444; /* Darker border for inputs */
        }

        .form-control:focus {
            background-color: #1c1c1c; /* Darker background on focus */
            border-color: #f0ad4e; /* Light orange border on focus */
        }

        .btn-primary {
            background-color: #f0ad4e; /* Light orange button */
            border-color: #f0ad4e;
            color: #1c1c1c; /* Dark text color on button */
        }

        .btn-primary:hover {
            background-color: #d98c2b; /* Darker shade on hover */
            border-color: #d98c2b;
        }
    </style>
</head>

<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Add Result</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Result</li>
                    <li class="breadcrumb-item active">Add Result</li>
                </ol>
            </nav>
        </div>
        <!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Add Result</h5>

                            <form class="row g-3" action="/admin/user/result/result-data" method="POST">
                                <!-- Select Job Title from result array -->
                                <div class="col-12">
                                    <label for="job_id" class="form-label">Select Job Title</label>
                                    <select class="form-control" id="job_id" name="job_id" required>
                                        <option value="" selected disabled style="color: antiquewhite;">Select Job Title</option>
                                        <!-- Loop through result array to populate options -->
                                        <% result.forEach(job => { %>
                                            <option style="color: antiquewhite;" value="<%= job._id %>"><%= job.title %></option>
                                        <% }); %>
                                    </select>
                                </div>

                                <!-- Input for Result Date -->
                                <div class="col-12">
                                    <label for="result_date" class="form-label">Result Date</label>
                                    <input type="date" class="form-control" id="result_date" name="result_date" required />
                                </div>

                                <!-- Input for Result Link -->
                                <div class="col-12">
                                    <label for="result_link" class="form-label">Result Link</label>
                                    <input type="url" class="form-control" style="color: antiquewhite;" id="result_link" name="result_link" required />
                                </div>

                                <!-- Submit Button -->
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Submit Result</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- End #main -->
</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admission Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #e0f7fa; /* Light sky blue background */
        }

        .card {
            width: 60%;
            margin: 0 auto;
            background-color: #f1f8e9; /* Light green for card background */
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
        }

        .card-header {
            background-color: #00796b; /* Teal for header */
            color: white;
        }

        .card-title {
            color: #004d40; /* Dark teal for title */
        }

        .link-text {
            display: block;
            margin-top: 10px;
            color: #1e88e5; /* Blue link color */
            text-decoration: none;
        }

        .link-text:hover {
            text-decoration: underline;
        }

        .btn-warning {
            background-color: #ffa000 !important; /* Orange for update button */
            border: none;
        }

        .btn-danger {
            background-color: #d32f2f !important; /* Red for delete button */
            border: none;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title"><strong>Admission Title:</strong> <%= result.title %></h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Type:</strong> <%= result.type %></p>
                        <p><strong>Program Name:</strong> <%= result.post_name %></p>
                        <p><strong>Admission Description:</strong> <%= result.job_description %></p>
                        <p><strong>Application Begin:</strong> <%= new Date(result.application_begin).toDateString() %></p>
                        <p><strong>Application End:</strong> <%= new Date(result.application_end).toDateString() %></p>
                        <p><strong>Payment Last Date:</strong> <%= new Date(result.pay_last_date).toDateString() %></p>
                        <p><strong>Correction Date:</strong> <%= new Date(result.correction_date).toDateString() %></p>
                        <p><strong>Exam Date:</strong> <%= result.exam_date %></p>
                        <p><strong>Fees1:</strong> <%= result.exam_fees1 %></p>
                        <p><strong>Fees2:</strong> <%= result.exam_fees2 %></p>
                        <p><strong>Fees3:</strong> <%= result.exam_fees3 %></p>
                        <p><strong>Fees Description:</strong> <%= result.fees_description %></p>
                        <p><strong>Age Limit:</strong> <%= result.minimum_age %> to <%= result.maximum_age %></p>
                        <p><strong>Age Limit Description:</strong> <%= result.age_description %></p>
                        <p><strong>Total Seats:</strong> <%= result.total_vacancy %></p>
                        <p><strong>How to Apply:</strong> <%= result.how_to_fill %></p>
                        
                        <!-- Additional Table Titles -->
                        <p><strong>Table Title 1:</strong> <%= result.table_title1 %></p>
                        <p><strong>Table Title 2:</strong> <%= result.table_title2 %></p>
                        <p><strong>Table Title 3:</strong> <%= result.table_title3 %></p>

                        <!-- Displaying links as plain text -->
                        <p><strong>Apply Online Link:</strong> <a href="<%= result.apply_online_link %>" class="link-text" target="_blank"><%= result.apply_online_link %></a></p>
                        <p><strong>Download Notification Link:</strong> <a href="<%= result.download_notification_link %>" class="link-text" target="_blank"><%= result.download_notification_link %></a></p>
                        <p><strong>Official Website Link:</strong> <a href="<%= result.official_website_link %>" class="link-text" target="_blank"><%= result.official_website_link %></a></p>
                    </div>
                    <div class="card-footer">
                        <p><strong>Created At:</strong> <%= new Date(result.createdAt).toLocaleString() %></p>
                        <p><strong>Updated At:</strong> <%= new Date(result.updatedAt).toLocaleString() %></p>

                        <a href="/admin/user/admission/edit-admission/<%= result._id %>" class="btn btn-warning">Update</a>
                        <a href="#" class="btn btn-danger" onclick="confirmDelete('<%= result._id %>')">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function confirmDelete(admissionId) {
            const isConfirmed = confirm("Are you sure you want to delete this admission post?");
            if (isConfirmed) {
                window.location.href = `/admin/user/admission/delete-admission/${admissionId}`;
            }
        }
    </script>

</body>

</html>

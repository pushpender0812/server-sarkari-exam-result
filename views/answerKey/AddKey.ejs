<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Answer Key</title>
</head>

<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Add Answer Key</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Answer Key</li>
                    <li class="breadcrumb-item active">Add Answer Key</li>
                </ol>
            </nav>
        </div>
        <!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Add Answer Key</h5>

                            <form class="row g-3" action="/admin/user/answerkey/key-data" method="POST">
                                <!-- Select Job Title from result array -->
                                <div class="col-12">
                                    <label for="job_id" class="form-label">Select Job Title</label>
                                    <select class="form-control" id="job_id" name="job_id" required>
                                        <option value="" selected disabled>Select Job Title</option>
                                        <!-- Loop through result array to populate options -->
                                        <% result.forEach(job => { %>
                                            <option value="<%= job._id %>"><%= job.title %></option>
                                        <% }); %>
                                    </select>
                                </div>

                                <!-- Input for Admit Card Date -->
                                <div class="col-12">
                                    <label for="answer_key_date" class="form-label">Answer Key Date</label>
                                    <input type="date" class="form-control" id="answer_key_date" name="answer_key_date" required />
                                </div>

                                <!-- Input for Admit Card Link -->
                                <div class="col-12">
                                    <label for="answer_key_link" class="form-label">Answer Key Link</label>
                                    <input type="url" class="form-control" id="answer_key_link" name="answer_key_link" required />
                                </div>

                                <!-- Submit Button -->
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Submit Answer Key</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- End #main -->
</body>

</html>

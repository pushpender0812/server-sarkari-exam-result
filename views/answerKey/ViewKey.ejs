<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Answer Keys</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>View Answer Keys</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Answer Key</li>
                    <li class="breadcrumb-item active">View Answer Keys</li>
                </ol>
            </nav>
        </div>
        <!-- End Page Title -->

        <section class="section">
            <div class="row">
                <!-- Loop through result array to create cards -->
                <% result.forEach((answerKey, index) => { %>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title"><strong>Job Title:</strong> <%= answerKey.job_id.title %></h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Answer Key Date:</strong> <%= new Date(answerKey.answer_key_date).toDateString() %></p>
                            <p><strong>Answer Key Link:</strong> <%= answerKey.answer_key_link %></p>
                            <p><strong>Created At:</strong> <%= new Date(answerKey.createdAt).toLocaleString() %></p>
                            <p><strong>Updated At:</strong> <%= new Date(answerKey.updatedAt).toLocaleString() %></p>
                        </div>
                        <div class="card-footer">
                            <!-- Action buttons -->
                            <a href="/admin/user/answerkey/edit/<%= answerKey._id %>" class="btn btn-warning">Edit</a>
                            <a href="/admin/user/answerkey/delete/<%= answerKey._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this answer key?');">Delete</a>
                        </div>
                    </div>
                </div>

                <% if ((index + 1) % 2 === 0) { %>
                    </div><div class="row">
                <% } %>
                <% }); %>
            </div>
        </section>
    </main>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
